# Flask Configuration
# CRITICAL: Generate a secure random secret key for production
# Example: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=CHANGEME_GENERATE_RANDOM_SECRET_KEY_64_CHARACTERS_MINIMUM

# Environment: development or production
FLASK_ENV=development

# Database
DATABASE_PATH=users.db

# Initial User Passwords
# IMPORTANT: Set strong passwords here (minimum 12 characters)
# These are only used during initial database setup
ADMIN_PASSWORD=CHANGEME_SECURE_ADMIN_PASSWORD
USER_PASSWORD=CHANGEME_SECURE_USER_PASSWORD

# Security Settings
# Set to 'true' in production to enforce HTTPS-only cookies
COOKIE_SECURE=false

# Rate Limiting
# Format: "number per time_unit" (e.g., "5 per minute", "100 per hour")
LOGIN_RATE_LIMIT=5 per minute

# Server Configuration
FLASK_PORT=5001
FLASK_HOST=127.0.0.1
